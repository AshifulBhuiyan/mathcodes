---
import "../styles/global.css";

const {
  title = "mathcodes.org â€“ Mathematics, Made for the Curious",
  description = "Explore interactive and code-driven math explanations from high school to graduate level.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" />

    <!-- MathJax config -->
    <script>
      window.MathJax = {
        tex: {
          inlineMath: [['\\(', '\\)']],
          displayMath: [['\\[', '\\]']],
        },
        options: {
          skipHtmlTags: ['script', 'noscript', 'style', 'textarea', 'pre'],
        }
      };
    </script>
    <script src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js" defer></script>
  </head>

  <body class="bg-[#21252d] text-[#1b91d6] m-0 p-0 font-sans">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    width: 100%;
    height: 100%;
  }
</style>
